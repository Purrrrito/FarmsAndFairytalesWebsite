@model FarmsAndFairytalesWebsite.Models.Event

@{
    ViewData["Title"] = "Delete";
}

@section Styles {
    <link rel="stylesheet" href="~/css/events.css" />
}

<div class="create-info">
    <h1>@Model.EventName</h1>
    <h3 class="text-danger">Are you sure you want to delete this event?</h3>
    <hr />

    <div class="form-container">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="EventId" />

            <!-- Date Input -->
            <div class="form-group">
                <label asp-for="DateOfEvent" class="control-label"></label>
                <input asp-for="DateOfEvent" class="form-control" disabled />
            </div>

            <!-- Event Name Input -->
            <div class="form-group">
                <label asp-for="EventName" class="control-label"></label>
                <input asp-for="EventName" class="form-control" disabled />
            </div>

            <!-- Description Input -->
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5" disabled></textarea>
            </div>

            <!-- Photographer Host Input -->
            <div class="form-group">
                <label asp-for="PhotographerHost" class="control-label"></label>
                <input asp-for="PhotographerHost" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label asp-for="ContactInfo" class="control-label"></label>
                <input asp-for="ContactInfo" class="form-control" />
                <span asp-validation-for="ContactInfo" class="text-danger" disabled></span>
            </div>

            <!-- Buttons -->
            <div class="form-buttons">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back to Events</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
